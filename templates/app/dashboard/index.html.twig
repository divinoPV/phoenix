{% extends 'base.html.twig' %}

{% block title %}{{ 'dashboard.title'|trans }}{% endblock %}

{% block main %}
    <h1 class="o-title">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512"><path d="M512 256C512 397.4 397.4 512 256 512C114.6 512 0 397.4 0 256C0 114.6 114.6 0 256 0C397.4 0 512 114.6 512 256zM280 292.7V88C280 74.75 269.3 64 256 64C242.7 64 232 74.75 232 88V292.7C208.5 302.1 192 325.1 192 352C192 387.3 220.7 416 256 416C291.3 416 320 387.3 320 352C320 325.1 303.5 302.1 280 292.7zM144 176C161.7 176 176 161.7 176 144C176 126.3 161.7 112 144 112C126.3 112 112 126.3 112 144C112 161.7 126.3 176 144 176zM96 224C78.33 224 64 238.3 64 256C64 273.7 78.33 288 96 288C113.7 288 128 273.7 128 256C128 238.3 113.7 224 96 224zM416 288C433.7 288 448 273.7 448 256C448 238.3 433.7 224 416 224C398.3 224 384 238.3 384 256C384 273.7 398.3 288 416 288zM368 112C350.3 112 336 126.3 336 144C336 161.7 350.3 176 368 176C385.7 176 400 161.7 400 144C400 126.3 385.7 112 368 112z"/></svg>
        {{ 'dashboard.title'|trans }}
        {{ 'dashboard.title.user'|trans }}
        {{ app.user.userName }}
    </h1>
    {% set dashboard = 'c-dashboard' %}
    <div class="{{ dashboard }}">
        {% set dashboardMyProjects = dashboard ~ '__myProjects' %}
        <div class="{{ dashboardMyProjects }}">
            <strong class="{{ dashboardMyProjects }}__title">{{ 'dashboard.personal.title'|trans }} - ({{ myProjects|length }})</strong>
            <span class="{{ dashboardMyProjects }}__info">{{ 'dashboard.personal.info'|trans }}</span>
            {% include 'app/common/_project_datatable.html.twig' with { projects: myProjects, block: dashboardMyProjects ~ '__list', emptyMessage: 'dashboard.personal.no_project'|trans } only %}
        </div>
        {% set dashboardTeamProjects = dashboard ~ '__teamProjects' %}
        <div class="{{ dashboardTeamProjects }}">
            <strong class="{{ dashboardTeamProjects }}__title">{{ 'dashboard.team.title'|trans }} - ({{ teamProjects|length }})</strong>
            <span class="{{ dashboardMyProjects }}__info">{{ 'dashboard.team.info'|trans }}</span>
            {% include 'app/common/_project_datatable.html.twig' with { projects: teamProjects, block: dashboardTeamProjects ~ '__list', emptyMessage: 'dashboard.team.no_project'|trans } only %}
        </div>
        {% set dashboardRiskyProjects = dashboard ~ '__riskyProjects' %}
        <div class="{{ dashboardRiskyProjects }}">
            <strong class="{{ dashboardRiskyProjects }}__title">{{ 'dashboard.risky.title'|trans }} - ({{ riskyProjects|length }})</strong>
            <span class="{{ dashboardMyProjects }}__info">{{ 'dashboard.risky.info'|trans }}</span>
            {% include 'app/common/_project_datatable.html.twig' with { projects: riskyProjects, block: dashboardRiskyProjects ~ '__list', emptyMessage: 'dashboard.risky.no_project'|trans } only %}
        </div>
        {% set dashboardFactProjects = dashboard ~ '__factProjects' %}
        <div class="{{ dashboardFactProjects }}">
            <strong class="{{ dashboardFactProjects }}__title">{{ 'dashboard.fact.title'|trans }} - ({{ factProjects|length }})</strong>
            <span class="{{ dashboardMyProjects }}__info">{{ 'dashboard.fact.info'|trans }}</span>
            {% include 'app/common/_project_datatable.html.twig' with { projects: factProjects, block: dashboardFactProjects ~ '__list', emptyMessage: 'dashboard.fact.no_project'|trans } only %}
        </div>
    </div>
{% endblock main %}
